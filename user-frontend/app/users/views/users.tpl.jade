md-toolbar.md-table-toolbar.md-default
    div.md-toolbar-tools
        span Users
        div.flex
        md-button(ng-click="listCtrl.openAddDialog()") add

md-table-container
    table(md-table)
        thead(md-head)
            tr(md-row)
                th(md-column) Id
                th(md-column) Name
                th(md-column) Email
                th(md-column) Order
                th(md-column) Token
        tbody(md-body)
            tr(md-row ng-repeat="user in listCtrl.items")
                td(md-cell) {{user['@id']}}
                td(md-cell) {{user['name']}}
                td(md-cell) {{user['email']}}
                td(md-cell) {{user['listOrder']}}
                td(md-cell) {{user['token']}}
                td(md-cell)
                    md-button(ng-click="listCtrl.openEditDialog(user)") edit
                    md-button(ng-click="listCtrl.deleteSelected(user)") delete



md-table-pagination(md-limit="listCtrl.query.limit" md-page="listCtrl.query.page" md-total="{{listCtrl.query.total}}" md-on-paginate="listCtrl.onPaginate")